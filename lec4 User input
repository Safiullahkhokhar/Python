#taking user input calculator 
ip= input("Enter 1st number: ")
ip2= input("Enter 2nd number: ")

ip= int(ip)
ip2= int(ip2)

print("~~~~~Choise any operation ( + - / * % )~~~~~")
operation=input("Enter opration: ")

if operation == "+":
    print(ip + ip2)
elif operation == "-":
    print( ip - ip2)
elif operation == "/":
    print( ip / ip2)
elif operation == "*":
    print(ip * ip2)
elif operation == "%":
    print(ip % ip2)
else:
    print("Invaild command")


